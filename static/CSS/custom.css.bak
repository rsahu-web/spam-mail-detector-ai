/* custom.css - modern, clean, presentation-ready */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap');

:root{
  --bg:#f5f8fb;
  --card:#ffffff;
  --muted:#6b7280;
  --accent:#0b6ef6;
  --accent-2:#6f42c1;
  --success:#28c081;
  --danger:#e14b4b;
}

*{box-sizing:border-box}
html,body{height:100%;margin:0;background:var(--bg);font-family:"Inter",system-ui,-apple-system,Segoe UI,Roboto,Arial;color:#111}
.container-main{max-width:980px;margin:48px auto;padding:28px;}

/* Card */
.app-card{
  background:var(--card);
  border-radius:14px;
  padding:34px;
  box-shadow: 0 12px 30px rgba(15,23,42,0.06);
  border:1px solid rgba(15,23,42,0.04);
}

/* Header */
.app-title{font-size:38px;font-weight:700;text-align:center;margin-bottom:6px}
.app-sub{color:var(--muted);text-align:center;margin-bottom:22px}

/* Textarea */
textarea.form-control{
  border-radius:10px;
  border:2px solid rgba(11,110,246,0.10);
  box-shadow: none;
  padding:18px;
  font-size:16px;
  resize:vertical;
  min-height:160px;
}
textarea.form-control:focus{
  outline:none;
  border-color:var(--accent);
  box-shadow: 0 8px 30px rgba(11,110,246,0.12);
}

/* Buttons */
.btn-primary{
  background: linear-gradient(180deg,var(--accent), #034ee6);
  color:white;
  border:none;
  padding:12px 28px;
  font-weight:700;
  border-radius:10px;
  box-shadow: 0 10px 26px rgba(11,110,246,0.12);
}
.btn-outline-secondary{
  border-radius:8px;
  padding:8px 12px;
  font-weight:600;
  background: #fff;
  border:1px solid rgba(15,23,42,0.06);
  box-shadow: 0 6px 18px rgba(15,23,42,0.04);
}

/* Quick example buttons row */
.examples-row{display:flex;gap:10px;justify-content:center;margin-top:14px}

/* Add to custom.css */
.btn-primary {
  transition: transform .12s ease, box-shadow .12s ease;
}
.btn-primary:hover {
  transform: translateY(-4px);
  box-shadow: 0 18px 36px rgba(11,110,246,0.14);
}
.btn-outline-secondary {
  transition: transform .10s ease, box-shadow .10s ease;
}
.btn-outline-secondary:hover { transform: translateY(-3px); box-shadow: 0 10px 20px rgba(15,23,42,0.06); }

.app-card { transform: translateY(8px); opacity: 0; transition: transform .5s ease, opacity .5s ease; }
.app-card.visible { transform: translateY(0); opacity: 1; }


/* Footer */
.app-footer{margin-top:22px;text-align:center;color:var(--muted);font-size:14px}

/* After page */
.result-wrap{max-width:820px;margin:48px auto;padding:34px;border-radius:12px;background:var(--card);box-shadow:0 12px 30px rgba(15,23,42,0.06)}
.badge-big{width:130px;height:130px;line-height:130px;border-radius:50%;color:#fff;font-weight:800;font-size:36px;display:inline-block;box-shadow:0 8px 30px rgba(15,23,42,0.08)}
.badge-phish{background:linear-gradient(180deg,var(--danger),#c92f2f)}
.badge-legit{background:linear-gradient(180deg,var(--success),#0a9f68)}
.prob-bar{height:14px;background:#f1f5f9;border-radius:12px;overflow:hidden;margin:14px auto 8px;width:70%}
.prob-fill{height:100%;width:0%;transition:width 700ms ease}
.prob-fill.phish{background:linear-gradient(90deg,#ff8a8a,#ff4040)}
.prob-fill.legit{background:linear-gradient(90deg,#9feccf,#28c081)}
.message-box{background:#fbfcfe;border:1px solid #eef2ff;padding:12px;border-radius:8px;font-family:monospace;white-space:pre-wrap;max-height:220px;overflow:auto}

/* Explain chips */
.chip{display:inline-block;padding:6px 10px;border-radius:999px;background:#fff6e8;border:1px solid #ffe3b8;color:#7a4b00;margin:4px 6px;font-size:13px}

/* Responsive */
@media (max-width:720px){
  .app-title{font-size:28px}
  .container-main{padding:18px}
  .app-card{padding:20px}
  .prob-bar{width:90%}
}
